<?xml version="1.0"?>
<config>
	<modules>
		<JJ_Vendor>
			<version>0.0.3</version>
		</JJ_Vendor>
	</modules>
    <admin>
		<routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>JJ_Vendor</module>
                    <frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
	</admin>
	<global>
		<blocks>
			<vendor>
				<class>JJ_Vendor_Block</class>
			</vendor>
		</blocks>
		<models>
			<vendor>
				<class>JJ_Vendor_Model</class>
				<resourceModel>vendor_resource</resourceModel>
			</vendor>
			<vendor_resource>
				<class>JJ_Vendor_Model_Resource</class>
				<entities>
					<vendor>
						<table>vendor</table>
					</vendor>
					<vendor_decimal>
						<table>vendor_decimal</table>
					</vendor_decimal>
					<vendor_datetime>
						<table>vendor_datetime</table>
					</vendor_datetime>
					<vendor_integer>
						<table>vendor_integer</table>
					</vendor_integer>
					<vendor_varchar>
						<table>vendor_varchar</table>
					</vendor_varchar>
					<vendor_text>
						<table>vendor_text</table>
					</vendor_text>
					<vendor_char>
						<table>vendor_char</table>
					</vendor_char>
					<eav_attribute>
						<table>vendor_eav_attribute</table>
					</eav_attribute>
				</entities>
			</vendor_resource>
		</models>
		<helpers>
			<vendor>
				<class>JJ_Vendor_Helper</class>
			</vendor>
		</helpers>
		<resources>
			<vendor_setup>
				<setup>
					<module>JJ_Vendor</module>
					<class>JJ_Vendor_Model_Resource_Setup</class>
				</setup>
			</vendor_setup>
		</resources>
	</global>
	<adminhtml>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
	</adminhtml>
</config>